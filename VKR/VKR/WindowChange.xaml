<Window x:Class="VKR.WindowChange"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VKR"
        mc:Ignorable="d"
        Title="Изменение карты" Height="300" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
           
        </Grid.RowDefinitions>
        <Label Content="Введите студенческий билет "  FontFamily="Times New Roman"  FontSize="30"  HorizontalAlignment="Center" Margin="0,40,0,0" VerticalAlignment="Top"/>
        <TextBox Name="studentID" Grid.Row="1" FontFamily="Times New Roman"  FontSize="30" HorizontalAlignment="Center"  Margin="0,30,0,0"   TextWrapping="Wrap" Text="142068" VerticalAlignment="Top" />
        <Button Content="Заменить" Grid.Row="2" FontFamily="Times New Roman"  FontSize="30"  HorizontalAlignment="Left" Margin="100,40,0,0" VerticalAlignment="Top" Click="Change"   />
        <Button Content="Удалить" Grid.Row="2" FontFamily="Times New Roman"  FontSize="30"  HorizontalAlignment="Right" Margin="0,40,100,0" VerticalAlignment="Top" Click="Delite"   />
    </Grid>
</Window>
